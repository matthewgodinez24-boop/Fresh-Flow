    <script>
        function toggleFeature(element) {
            const isActive = element.classList.contains('active');
            
            document.querySelectorAll('.feature-item').forEach(item => {
                item.classList.remove('active');
            });
            
            if (!isActive) {
                element.classList.add('active');
            }
        }
    </script>
